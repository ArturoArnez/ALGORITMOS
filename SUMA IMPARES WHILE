//realizar suma de impares mientras no se digite un numero negativo
#include "stdafx.h"
#include "conio.h"
#include <iostream>


using namespace std;

void main()
{ int suma,N,I;

suma=0;


cout<<"INGRESE EL NUMERO: ";
cin>>N;
while(N>0)
{
for(I=1;I<=N;I=I+2)
   suma=suma+I;

cout<<"EL RESULTADO ES: "<<suma;
cin>>N;
}

getch();
}

